{
  "name": "obsidian-ignite",
  "version": "0.1.0",
  "description": "Goal-oriented learning plugin for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome lint ./src",
    "format": "biome format ./src --write",
    "check": "biome check ./src",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [
    "obsidian",
    "plugin",
    "ai",
    "learning",
    "goals",
    "ignite"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@testing-library/react": "^16.3.1",
    "@types/micromatch": "^4.0.10",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "builtin-modules": "^4.0.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.25.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "obsidian": "^1.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "micromatch": "^4.0.8",
    "openai": "^6.15.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ]
  }
}
